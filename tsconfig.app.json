{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "amplify/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "files": [
    "src/main.ts",
    "src/components/Todos.vue",
    "src/components/MenuBar.vue",
    "src/components/SearchForm.vue",
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}